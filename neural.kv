#:import utils kivy.utils

ScreenManager:
    MainScreen:
        name: 'inicio'
    ProcessingScreen:
        name: 'procesando'
    ResultScreen:
        name: 'resultados'

<MainScreen>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#0B0E14')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)
        Label:
            text: "NEURAL LINK"
            color: utils.get_color_from_hex('#00f2ff')
            bold: True
            size_hint_y: 0.1
            font_size: '24sp'
        
        Button:
            id: find_files_button
            text: "Buscar Archivos en Descargas"
            size_hint_y: None
            height: '48dp'
            on_release: root.find_and_display_files()

        ScrollView:
            size_hint_y: 0.8
            GridLayout:
                id: file_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)

<ProcessingScreen>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#0B0E14')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.segment_text
            color: utils.get_color_from_hex('#00f2ff')

<ResultScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: txt_final
            readonly: True
            background_color: 0,0,0,1
            foreground_color: 1,1,1,1